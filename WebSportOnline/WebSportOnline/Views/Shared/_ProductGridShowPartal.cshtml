@model WebSportOnline.Models.SanPham

@if (Model.isnew == true)
{
    <a class="block2-labelnew"></a>
}
@if (Model.ishot == true)
{
    <a class="block2-labelsale"></a>
}
        <div class="block2">
            <div class="block2-img wrap-pic-w of-hidden pos-relative">
                <img src="@Url.Content("~/Content/images/")@Model.AnhDaiDien" alt="IMG-PRODUCT">

                <div class="block2-overlay trans-0-4">
                    <a href="#" class="block2-btn-addwishlist hov-pointer trans-0-4">
                        <i class="icon-wishlist icon_heart_alt" aria-hidden="true"></i>
                        <i class="icon-wishlist icon_heart dis-none" aria-hidden="true"></i>
                    </a>

                    <div class="block2-btn-addcart w-size1 trans-0-4">
                        <!-- Button
                        <button href="javascript:;" class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4" onclick="Addcart('@Model.MaSP',1)">
                            Add to Cart
                        </button> -->
                        <button href="javascript:;" class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4" onclick="Addcart('@Model.MaSP',1)">Add to Cart</button>
                    </div>
                </div>
            </div>

            <div class="block2-txt p-t-20">
                <a href="@Url.Action("Index", "SanPham", new { id = @Model.MaSP })" class="block2-name dis-block s-text3 p-b-5">
                    @Model.TenSP
                </a>

                @if (Model.GiaTien < Model.GiaGoc){ <span class="block2-oldprice m-text7 p-r-5">@string.Format("{0:0,0}", Model.GiaGoc)  VNĐ</span> }

                <span class="block2-newprice m-text8 p-r-5">
                    @string.Format("{0:0,0}", Model.GiaTien) VNĐ
                </span>
                    
                
            </div>
        </div>


