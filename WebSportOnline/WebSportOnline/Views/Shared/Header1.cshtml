
@{
    ViewBag.Title = "Header1";
}
@using Microsoft.AspNet.Identity
<!-- Header -->
<header class="header1">
    <!-- Header desktop -->
    <div class="container-menu-header">
        <div class="topbar">
            <div class="topbar-social">
                <a href="#" class="topbar-social-item fa fa-facebook"></a>
                <a href="#" class="topbar-social-item fa fa-instagram"></a>
                <a href="#" class="topbar-social-item fa fa-pinterest-p"></a>
                <a href="#" class="topbar-social-item fa fa-snapchat-ghost"></a>
                <a href="#" class="topbar-social-item fa fa-youtube-play"></a>
            </div>

            <span class="topbar-child1">
                Free shipping for standard order over $100
            </span>

            <div class="topbar-child2">
                <span class="topbar-email">
                    
                </span>

                <div class="topbar-language rs1-select2">
                    <ul>
                        @if (User.IsInRole("Nhân viên") || User.IsInRole("Quản trị viên"))
                        {
                            <li><a href="@Url.Action("Index", "Admin")">Trang Admin|</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <div class="wrap_header">
            <!-- Logo -->
            <a href="@Url.Action("Index", "Home")" class="logo">
                <img src="~/Content/images/icons/logoweb.png" alt="IMG-LOGO">
            </a>

            <!-- Menu -->
            @Html.Action("MainMenu", "Home")


            <!-- Header Icon -->
            <div class="header-icons">
                <ul class="right">
                    
                    @if (!Request.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <a class="header-wrapicon1 dis-block" data-toggle="dropdown" href="#user-cp"><img src="~/Content/images/icons/icon-header-01.png" class="header-icon1" alt="ICON"></a>
                            <ul class="dropdown-menu" role="menu">
                                <li role="presentation"><a role="menuitem" tabindex="-1" href="@Url.Action("Authentication", "Account")">Đăng kí</a></li>
                                <li role="presentation"><a role="menuitem" tabindex="-1" href="@Url.Action("Authentication", "Account")">Đăng nhập</a></li>
                            </ul>
                        </li>


                            @*<li>
                        <a href="@Url.Action("Authentication", "Account")" class="header-wrapicon1 dis-block">

                        </a>
                    </li>*@
                    }
                    else
                    {
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#user-cp">Chào @User.Identity.Name</a>
                            <ul class="dropdown-menu" role="menu">
                                <li role="presentation"><a role="menuitem" tabindex="-1" href="@Url.Action("Manage", "Account")">Cài đặt mật khẩu</a></li>
                                @if (User.IsInRole("Khách hàng") || User.IsInRole("Quản trị viên") || User.IsInRole("Nhân viên"))
                                {
                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="@Url.Action("EditInfo", "Account")">Thông tin cá nhân</a></li>
                                        <li role="presentation"><a role="menuitem" tabindex="-1" href="@Url.Action("Xemdonhang", "Home", new { maKH = User.Identity.GetUserId() })">Xem đơn hàng</a></li>
                                }

                                <li><a href="@Url.Action("LogOut", "Account")">Đăng xuất</a></li>
                            </ul>
                        </li>
                            
                    }
                </ul>







                <span class="linedivide1"></span>

                <!-- Cart -->
                @Html.Action("CartTitle", "Xuligiohang")

            </div>
        </div>
    </div>

    <!-- Header Mobile -->
    <div class="wrap_header_mobile">
        <!-- Logo moblie -->
        <a href="@Url.Action("Index", "Home")" class="logo-mobile">
            <img src="~/Content/images/icons/logoweb.png" alt="IMG-LOGO">
        </a>

        <!-- Button show menu -->
        <div class="btn-show-menu">
            <!-- Header Icon mobile -->
            <div class="header-icons-mobile">
                <a href="@Url.Action("Authentication", "Account")" class="header-wrapicon1 dis-block">
                    <img src="~/Content/images/icons/icon-header-01.png" class="header-icon1" alt="ICON">
                </a>

                <span class="linedivide2"></span>
                  
                <!-- Cart -->
                @Html.Action("CartTitle", "Xuligiohang")

            </div>

            <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
                <span class="hamburger-box">
                    <span class="hamburger-inner"></span>
                </span>
            </div>
        </div>
    </div>
    <!-- Menu -->
    @Html.Action("MobileMenu", "Home")
</header>