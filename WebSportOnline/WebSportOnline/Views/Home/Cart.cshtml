@model WebSportOnline.Models.Giohang
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/GioHangLayout.cshtml";
}

<!-- Cart -->
	<section id="cart-page" class="cart bgwhite p-t-70 p-b-100">
		<div class="container">
			<!-- Cart item -->
			<div class="container-table-cart pos-relative">
				<div class="wrap-table-shopping-cart bgwhite">
                    <table class="table-shopping-cart">
                        <tr class="table-head">
                            <th class="column-1">Images</th>
                            <th class="column-2">Product</th>
                            <th class="column-3">Price</th>
                            <th class="column-4 p-l-70">Quantity</th>
                            <th class="column-5">Total</th>
                            <th class="column-5">Action</th>
                        </tr>
                        @for (int i = 0; i < Model.getGiohang().Count; i++)
                        {
                            <tr class="table-row">
                                <td class="column-1">
                                    <div class="cart-img-product b-rad-4 o-f-hidden">
                                        <img src="~/Content/images/@Model.getGiohang()[i].sanPham.AnhDaiDien" alt="IMG-PRODUCT">
                                    </div>
                                </td>
                                <td class="column-2">@Model.getGiohang()[i].sanPham.TenSP</td>
                                <td class="column-3">@Model.getGiohang()[i].sanPham.GiaTien VNĐ</td>
                                <td class="column-4">
                                    <div class="flex-w bo5 of-hidden w-size17">
                                                <form>
                                                    <a class="btn-num-product-downcolor1 flex-c-m size7 bg8 eff2 fs-12 fa fa-minus" href="javascript:;" onclick="changequality(@i,'G')"></a>
                                                </form>
                                                    <input name="quantity1" id="quantity+@i" class="size8 m-text18 t-center num-product" readonly="readonly" type="text" value="@Model.getGiohang()[i].Soluong" />
                                                <form>
                                                    <a class="btn-num-product-up color1 flex-c-m size7 bg8 eff2 fs-12 fa fa-plus" href="javascript:;" onclick="changequality(@i,'T')"></a>
                                                </form>
                                    </div>
                                </td>
                                <td class="column-5">@string.Format("{0:0,0}", @Model.getGiohang()[i].Thanhtien) VNĐ</td>
                                <td class="column-5">
                                    <div class="size10 trans-0-4 m-t-10 m-b-10">
                                        <a class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4" style="width:100px;height:35px;" href="javascript:;" onclick="xoagiohang(@i)">Xóa</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </table>
				</div>
			</div>

			<div class="flex-w flex-sb-m p-t-25 p-b-25 bo8 p-l-35 p-r-60 p-lr-15-sm">
				<div class="flex-w flex-m w-full-sm">
					<div class="size11 bo4 m-r-10">
						<input class="sizefull s-text7 p-l-22 p-r-22" type="text" name="coupon-code" placeholder="Coupon Code">
					</div>

					<div class="size12 trans-0-4 m-t-10 m-b-10 m-r-10">
						<!-- Button 
						<button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
							Apply coupon
						</button>-->                     
                        <button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4" type="submit">Áp dụng</button>
					</div>
				</div>

				<div class="size10 trans-0-4 m-t-10 m-b-10">
					<!-- Button -->
					<a href=@Url.Action("AdvancedSearchView", "Search") class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
						Tiếp tục mua hàng
					</a>
				</div>
			</div>

			<!-- Total -->
			<div class="bo9 w-size18 p-l-40 p-r-40 p-t-30 p-b-38 m-t-30 m-r-0 m-l-auto p-lr-15-sm">
				<h5 class="m-text20 p-b-24">
					Cart Totals
				</h5>

				<!--  -->
				<div class="flex-w flex-sb-m p-b-12">
					<span class="s-text18 w-size19 w-full-sm">
						Subtotal:
					</span>

					<span class="m-text21 w-size20 w-full-sm">
						@string.Format("{0:0,0}", @Model.TinhtongtienCart()) VNĐ
					</span>

                    <span class="s-text18 w-size19 w-full-sm">
                        Total Quantity:
                    </span>

                    <span class="m-text21 w-size20 w-full-sm">
                        @Model.Tinhtongsoluongtronggio()
                    </span>

                    <span class="s-text18 w-size19 w-full-sm">
                        Shipping:
                    </span>

                    <span class="m-text21 w-size20 w-full-sm">
                        Miễn phí
                    </span>
				</div>

				<!--  -->
				<div class="flex-w flex-sb bo10 p-t-15 p-b-20">
					
				</div>

				<!--  -->
				<div class="flex-w flex-sb-m p-t-26 p-b-30">
					<span class="m-text22 w-size19 w-full-sm">
						Total:
					</span>

					<span class="m-text21 w-size20 w-full-sm">
						@string.Format("{0:0,0}", @Model.TinhtongtienCart()) VNĐ
					</span>
				</div>

				<div class="size15 trans-0-4">
					<!-- Button -->
					<a class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4" href='@Url.Action("Checkout", "Home")'>
						Proceed to Checkout
					</a>
				</div>
			</div>
		</div>
	</section>

